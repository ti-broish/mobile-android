<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Large" parent="AppTheme">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Icon.Secondary" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/secondary_button_background</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Controls Styles -->
    <style name="AppTheme.Widget" />

    <!-- TextView -->
    <style name="AppTheme.Widget.TextView" />

    <style name="AppTheme.Widget.TextView.ActivityTitle">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppTheme.Widget.TextView.ActivitySubtitle">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="AppTheme.Widget.TextView.InfoText">
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.Medium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
    </style>


    <style name="InstructionScreenText">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="InstructionScreenText.Big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InstructionScreenText.Big.Centered">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="InstructionScreenText.Huge">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="PopupMenu" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="YouCountDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActionButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LiveAppTheme" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/darkEditTextColor</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:textColorPrimary">@color/transparentBlack</item>
        <item name="colorError">@color/errorRed</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="LiveAppTheme.NoActionBar.TransparentStatus.Light" parent="LiveAppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="LiveAppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="BroadcastActivityTheme" parent="LiveAppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
    </style>


</resources>
