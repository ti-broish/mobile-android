<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sendSuccessCenterGuideline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/itemSendSuccessAnimationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:lottie_fileName="progress_to_tick.json"
        android:layout_marginBottom="4dp"
        app:lottie_speed="3"
        app:lottie_loop="false"
        app:lottie_autoPlay="true"
        app:lottie_renderMode="software"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sendSuccessCenterGuideline"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/protocol_send_successfully"
        android:layout_marginTop="4dp"
        android:textAllCaps="false"
        android:textColor="@color/textBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendSuccessCenterGuideline"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendItemOkButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/action_button_primary_selector"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="@string/ok"
        android:textSize="@dimen/action_button_text_size"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/action_button_text_size"
        app:autoSizeMinTextSize="@dimen/action_button_min_text_size"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>