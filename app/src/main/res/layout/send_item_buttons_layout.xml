<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendItemGalleryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        android:layout_marginTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/action_button_secondary_selector"
        android:text="@string/add_images"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/action_button_text_size"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/action_button_text_size"
        app:autoSizeMinTextSize="@dimen/action_button_min_text_size"
        android:drawableStart="@drawable/ic_baseline_image_24_primary"
        android:drawablePadding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sendItemCameraBtn"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendItemCameraBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="2"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/action_button_secondary_selector"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="@string/take_photo"
        android:textAllCaps="true"
        android:textSize="@dimen/action_button_text_size"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/action_button_text_size"
        app:autoSizeMinTextSize="@dimen/action_button_min_text_size"
        android:drawableStart="@drawable/ic_baseline_photo_camera_24_primary"
        android:drawablePadding="0dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sendItemGalleryBtn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendItemContinueBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/action_button_primary_selector"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="@string/send"
        android:textSize="@dimen/action_button_text_size"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/action_button_text_size"
        app:autoSizeMinTextSize="@dimen/action_button_min_text_size"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/sendItemCameraBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>