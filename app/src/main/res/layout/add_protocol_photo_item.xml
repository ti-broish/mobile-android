<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/picker_images_margin"
    android:layout_marginBottom="@dimen/picker_images_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/protocolPhotoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"/>

    <ImageView
        android:id="@+id/protocolPhotoDeleteImageView"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="@id/protocolPhotoImageView"
        app:layout_constraintRight_toRightOf="@id/protocolPhotoImageView"
        android:src="@drawable/ic_baseline_delete_24"
        android:foreground="?android:attr/selectableItemBackgroundBorderless" />


</androidx.constraintlayout.widget.ConstraintLayout>